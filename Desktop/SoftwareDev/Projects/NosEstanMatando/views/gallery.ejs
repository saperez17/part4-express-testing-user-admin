<%- include('./partials/header') %>
<div class="container">
    <div class="columns is-multiline">
        <div class="column is-four-fifths is-offset-1 ">
            <div class="is-flex is-flex-direction-column is-justify-content-center is-align-items-center pt-3">
                <h1 class="title is-size-3-mobile  ">#NosEstanMatando</h1>
            </div>
        </div>

        <div class="column is-10-mobile">
            <div class="is-flex is-flex-direction-center is-justify-content-left is-align-items-left ">
                <div class="field">
                    <div class="control">
                        <input class="input" type="text" placeholder="Busca por nombre">
                    </div>
                </div>

                <div class="field ml-2">
                    <p class="control has-icons-left">
                        <span class="select">
                            <select>
                                <option selected>Ciudad</option>
                                <option>Popayan</option>
                                <option>Cali</option>
                            </select>
                        </span>
                        <span class="icon is-small is-left">
                            <i class="fas fa-globe"></i>
                        </span>
                    </p>
                </div>
            </div>
        </div>
        <div class="column is-12 has-text-centered">
            <div class="is-size-3">Defensores del pueblo</div>
        </div>
    </div>


    <div class="columns is-multiline">
        <% if (persons!=null){%>
            <% for (var i=0; i<persons.length; i++){%>
            <div class="column is-half-desktop is-12-mobile is-offset-3 ">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-2by2">
                            <!-- <img src="/assets/sm.PNG" height="100px" alt="Placeholder image"> -->
                            <img src="data:image/<%=persons[i].img.contentType%>;base64,
                                <%=persons[i].img.data.toString('base64')%>" height="100px" alt="Placeholder image">
                        </figure>
                        <div class="card-name">
                            <p class="title is-4"><%=persons[i].name%></p>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <!-- <div class="media-left"> -->
                            <!-- <figure class="image is-48x48">
                            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                        </figure> -->
                            <!-- </div> -->
                            <div class="media-content">
                                <p class="title is-5"><%=persons[i].ocupation%></p>
                                <p class="subtitle is-6"><%= persons[i].age + ' aÃ±os, ' + persons[i].city %></p>
                            </div>
                        </div>

                        <div class="content">
                            <%=persons[i].description%>
                            <br>
                            <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                        </div>
                    </div>
                    <footer class="card-footer">
                        <a href="#" class="card-footer-item">
                            <span>
                                <i class="fas fa-share"></i>
                            </span>
                        </a>
                        <a href="#" class="card-footer-item ">
                            <span class="">
                                <i class="fas fa-heart"></i>
                            </span>
                        </a>
                        <a href="#" class="card-footer-item">
                            <span>
                                <i class="fas fa-comment"></i>
                            </span>
                        </a>
                    </footer>
                </div>
            </div>
            <%}%>
        <% }%>
        

        <div class="column is-12-mobile">
            <a class="button is-danger is-medium btn-add" href="/register"><i class="fas fa-plus"></i></a>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>