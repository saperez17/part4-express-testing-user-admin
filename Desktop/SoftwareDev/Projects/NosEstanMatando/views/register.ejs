<%- include('./partials/header') %>
<div class="container">
    <div class="columns is-multiline">
        <div class="column is-four-fifths is-offset-1 ">
            <div class="is-flex is-flex-direction-column is-justify-content-center is-align-items-center pt-3">
                <h1 class="title is-size-3-mobile  ">#NosEstanMatando</h1>
            </div>

            <div class="column is-10-mobile">
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="field">
                        <label class="label">Nombre</label>
                        <div class="control">
                          <input class="input" type="text" name="name" placeholder="e.g Alex Smith">
                        </div>
                      </div>
                      
                      <div class="field">
                        <label class="label">Edad</label>
                        <div class="control">
                          <input class="input" type="text" name="age" placeholder="e.g. 19">
                        </div>
                      </div>
                      <div class="field">
                        <label class="label">Ciudad</label>
                        <div class="control">
                          <input class="input" type="text" name="city" placeholder="e.g. Cali">
                        </div>
                      </div>
                      <div class="field">
                        <label class="label">Ocupacion</label>
                        <div class="control">
                          <input class="input" type="text" name="occupation" placeholder="e.g. Estudiante">
                        </div>
                      </div>
                      <div class="field">
                        <label class="label">Description</label>
                        <div class="control">
                          <textarea class="textarea"  name="description" placeholder="Escribe algo aqui"></textarea>
                        </div>
                      </div>
                      
                      <div class="file is-boxed is-small ">
                        <label class="file-label">
                          <input class="file-input" type="file" name="profilePicture">
                          <span class="file-cta">
                            <span class="file-icon">
                              <i class="fas fa-upload"></i>
                            </span>
                            <span class="file-label">
                              Subir foto
                            </span>
                          </span>
                        </label>
                      </div>
                      <button type="submit" class="button is-primary mt-2">Registrar</button>
                </form>

            </div>

        </div>

        
    </div>
</div>

<%- include('./partials/footer') %>